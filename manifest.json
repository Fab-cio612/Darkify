{
    "name": "Darkify",
    "description": "Automatically applys dark mode to any site",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "main.js"
    },
    "permissions": ["storage", "tabs", "scripting", "webNavigation"],
    "host_permissions": ["http://*/", "https://*/"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/icons/darkifyicon16.png",
        "32": "/icons/darkifyicon32.png",
        "48": "/icons/darkifyicon48.png",
        "128": "/icons/darkifyicon128.png"
      }
    },
    "icons": {
      "16": "/icons/darkifyicon16.png",
      "32": "/icons/darkifyicon32.png",
      "48": "/icons/darkifyicon48.png",
      "128": "/icons/darkifyicon128.png"
    }
  }